<UserControl x:Class="ShopApp.Views.Controls.OrdersConrol"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ShopApp.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <ScrollViewer>
        <Grid Background="#252525">
            <StackPanel Orientation="Vertical" Grid.Column="0" Loaded="StackPanel_Loaded">
                <Label Content="Deine Bestellungen" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="18" FontWeight="Bold" Width="Auto" Height="Auto" />
                <StackPanel x:Name="orderItemsContent" HorizontalAlignment="Left" Orientation="Vertical" Margin="10,10,10,10" Width="730"></StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
