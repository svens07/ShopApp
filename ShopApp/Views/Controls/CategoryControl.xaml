<UserControl x:Class="ShopApp.Views.Controls.CategoryControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ShopApp.Views.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="898">
    <Grid Margin="0, 10, 0, 10">
        <StackPanel Orientation="Vertical" Margin="0,10,0,0">
            <Label x:Name="categoryTitle" Content="Category" HorizontalAlignment="Left" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="18" FontWeight="Bold" Height="Auto" Width="Auto" />
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Visible">
                <StackPanel x:Name="productsContent" Orientation="Horizontal" MaxHeight="250" Width="888"></StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
